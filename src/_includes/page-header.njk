<style>
.page-header {
  align-self: stretch;
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  padding: 0.5rem 1.25rem;
  background-color: var(--background-primary);
}
.top-page-header {
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 0.25rem 0 0;
}
.header-subheader {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 8px;
  padding: 0;
}
.page-header-text {
  align-self: stretch;
  flex-grow: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 20px;
  padding: 0.75rem 0;
}
.logo-text-badge-link {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  gap: 20px;
  padding: 0;
}
.header-label {
  flex-grow: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 16px;
}
.button-stripe {
  flex-grow: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  gap: 8px;
  padding: 0;
}
.breadcrumb {
  .breadcrumb-item a {
    color: var(--text-link);
    font-weight: var(--Font-weight-normal);
  }
}
</style>
<div class="page-header">
  <div class="top-page-header">
    {%- if (breadcrumbs) -%}
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
      <ol class="breadcrumb">
        {% for navPages in collections.all | eleventyNavigation %}
        <li class="breadcrumb-item"><a href="{{navPages.url}}">{{ eleventyNavigation.parent }}</a></li>
        {% endfor %}
        <li class="breadcrumb-item active" aria-current="page">{{eleventyNavigation.key}}</li>
      </ol>
    </nav>
    {# {{ collections.all | eleventyNavigationBreadcrumb("ProjectCosts", { includeSelf: true }) | eleventyNavigationToHtml | safe }}
    {{ navPages | dump | safe }} #}
    {%- else -%}{%- endif -%}
  </div>
  <div class="page-header-text">
    <div class="logo-text-badge-link">
      <div class="header-subheader">
        <div class="header-label">
          <span class="Heading2">
            {{ title }}
          </span>
        </div>
      </div>
    </div>
    {%- if (toolBar) -%}
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
      {%- if toolbar === "btn-group" -%}
      <div class="btn-group me-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-outline-secondary">1</button>
        <button type="button" class="btn btn-outline-secondary">2</button>
        <button type="button" class="btn btn-outline-secondary">3</button>
        <button type="button" class="btn btn-outline-secondary">4</button>
      </div>
      {%- endif -%}
      {%- if toolBar === "input" -%}
      <div class="input-group">
        <div class="input-group-text" id="btnGroupAddon">@</div>
        <input type="text" class="form-control" placeholder="Input group example" aria-label="Input group example" aria-describedby="btnGroupAddon">
      </div>
      {%- endif -%}
      {%- if toolBar === "buttons" -%}
      <div class="d-flex gap-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">CAS - NY</button>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Actions
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </div>
      </div>
      {%- endif -%}
    </div>
    {%- endif -%}
  </div>
  {%- if (tabBar) -%}
  <ul class="nav nav-underline">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page" href="#">Active</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Inactive</a>
    </li>
    <li class="nav-item">
      <a class="nav-link disabled" aria-disabled="true">Complete</a>
    </li>
  </ul>
  {%- else -%}{%- endif -%}
</div>
